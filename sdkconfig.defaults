# Non-secret defaults (safe to commit)
CONFIG_PARTITION_TABLE_CUSTOM=y
# CONFIG_PARTITION_TABLE_SINGLE_APP is not set
# CONFIG_PARTITION_TABLE_SINGLE_APP_LARGE is not set
CONFIG_PARTITION_TABLE_FILENAME="partitions_rigo.csv"

CONFIG_LV_BUILD_EXAMPLES=n
CONFIG_LV_BUILD_DEMOS=n

CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y
# CONFIG_ESPTOOLPY_FLASHSIZE_2MB is not set

CONFIG_RIGO_WIFI_AP_SSID="rigo-box3"
CONFIG_RIGO_WIFI_AP_PASSWORD="rigoberto"
CONFIG_RIGO_WIFI_STA_SSID=""
CONFIG_RIGO_WIFI_STA_PASSWORD=""

# ESP-SR model selection (built-in wake word)
CONFIG_SR_WN_WN9S_HIESP=y
# CONFIG_SR_WN_WN9_HIESP is not set
CONFIG_MODEL_IN_FLASH=y
# CONFIG_MODEL_IN_SDCARD is not set

# Voice cloud endpoints (set real values in sdkconfig.defaults.local)
CONFIG_RIGO_STT_URL=""
CONFIG_RIGO_ASSISTANT_URL=""
CONFIG_RIGO_TTS_URL=""
CONFIG_RIGO_API_BEARER=""
CONFIG_RIGO_CAPTURE_MS=3500
